{
  "name": "shift",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "fmt": "prettier -w .",
    "hh:compile": "pnpm --filter @shift/hardhat compile",
    "hh:test": "pnpm --filter @shift/hardhat test",
    "hh:deploy:base-sepolia": "pnpm --filter @shift/hardhat deploy:base-sepolia",
    "forge:test": "pnpm --filter shift-foundry test",
    "forge:build": "pnpm --filter shift-foundry build",
    "forge:cov": "pnpm --filter shift-foundry test:coverage",
    "cov:gate": "bash ./scripts/check-coverage.sh",
    "build": "pnpm hh:compile && pnpm forge:build"
  },
  "devDependencies": {
    "prettier": "^3.3.0"
  }
}
