# Shift DeSoc Environment Configuration
# Copy this file to .env and fill in the actual deployed contract addresses

# ========================================
# NETWORK CONFIGURATION
# ========================================
# Supported networks: base_sepolia, base, ethereum_sepolia, ethereum
NETWORK=base_sepolia

# Base Sepolia RPC Configuration  
RPC_BASE_SEPOLIA="https://sepolia.base.org"

# Base Mainnet
BASE_RPC_URL="https://mainnet.base.org"
BASE_CHAIN_ID=8453

# Ethereum Sepolia Testnet  
ETHEREUM_SEPOLIA_RPC_URL="https://sepolia.infura.io/v3/YOUR_PROJECT_ID"
ETHEREUM_SEPOLIA_CHAIN_ID=11155111

# Ethereum Mainnet
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/YOUR_PROJECT_ID"
ETHEREUM_CHAIN_ID=1

