# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================
# Default community parameters
DEFAULT_COMMUNITY_ID=1
DEFAULT_DEBATE_WINDOW=604800    # 7 days in seconds
DEFAULT_VOTE_WINDOW=259200      # 3 days in seconds
DEFAULT_EXECUTION_DELAY=172800  # 2 days in seconds

# Revenue distribution parameters (basis points)
DEFAULT_WORKERS_PERCENTAGE=4000     # 40%
DEFAULT_TREASURY_PERCENTAGE=3000    # 30% 
DEFAULT_INVESTORS_PERCENTAGE=3000   # 30%

# ========================================
# COHORT MANAGEMENT DEFAULTS
# ========================================
# Common cohort creation defaults
DEFAULT_TARGET_ROI=120              # 120% ROI target
DEFAULT_PRIORITY_WEIGHT=2000        # Revenue distribution weight
DEFAULT_MAX_INVESTORS=25            # Maximum investors per cohort
DEFAULT_MIN_INVESTMENT=5000         # Minimum investment in USDC
DEFAULT_MAX_TOTAL_RAISE=250000      # Maximum total raise per cohort

# ========================================
# EXTERNAL INTEGRATIONS
# ========================================
# IPFS configuration
